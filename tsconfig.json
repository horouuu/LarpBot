{
  "compilerOptions": {
    "target": "es2024",
    "module": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "@commands": ["commands"],
      "@commands/*": ["commands/*"],
      "@/*": ["*"],
      "@types-local/*": ["types/*"],
      "@config": ["config.ts"],
      "@handlers/*": ["handlers/*"]
    }
  },
  "exclude": ["./node_modules", "src/scripts/update-types.ts"]
}
